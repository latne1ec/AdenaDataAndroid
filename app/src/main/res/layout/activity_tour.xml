<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/pager"
    tools:context="com.adenadata.android.activity.TourActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/tour_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/tour_circle1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_on"
            android:layout_margin="4dp"
            />

        <ImageView
            android:id="@+id/tour_circle2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_off"
            android:layout_margin="4dp"
            />

        <ImageView
            android:id="@+id/tour_circle3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_off"
            android:layout_margin="4dp"
            />

        <ImageView
            android:id="@+id/tour_circle4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle_off"
            android:layout_margin="4dp"
            />

    </LinearLayout>

</RelativeLayout>

